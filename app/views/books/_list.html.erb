<%# 総合一覧画面、複数のユーザーが混在する %>
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do%>
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class:
  "rad", format: 'jpeg', fallback: "http://placehold.jp/60x60.jpg?text=Profile" %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
