<div class="col-md-3">
  <%= render 'users/user-info', books: @books %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>

  <table class="table table-user-show">
    <tbody>
      <tr>
        <td>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class: "rad", format: 'jpeg', fallback: "http://placehold.jp/100x100.jpg?text=Profile" %>
          <br>
          <%= link_to @book.user.name, books_path(@user)%>
        </td>
        <td>
          <%= @book.title %>
        </td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td><%= link_to "編集", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "削除", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
        <% end %>
      </tr>
    </tbody>
  </table>

</div>
