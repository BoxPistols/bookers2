<div class="row">
    <div class="col-md-3">
        <%= render 'users/user-info', books: @books %>
    </div>

    <div class="col-md-9">
        <h2>タイトル</h2>
        <h2>ユーザー</h2>
        <p><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class:
            "rad", format: 'jpeg', fallback: "http://placehold.jp/100x100.jpg?text=Profile"
            %></p>
        <h2>Title</h2>
        <p><%= @book.title %></p>
        <h2>本文</h2>
        <p><%= @book.body %></p>
        <%# Refile画像 %>
            <p>画像</p>
            <%= attachment_image_tag @book, :image, format: 'jpeg', size: "300x300" %>

            <%# ログインユーザー自身が投稿したものしか編集出来ないようにする %>
            <% if @book.user == current_user %>
            <%= link_to "編集", edit_book_path(@book.id) %>
            <%= link_to "削除", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
            <% end %>

            </div>
        </div>