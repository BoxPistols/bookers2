<div class="container">
    <div class="row">
        <div class="">
            <h2>User info</h2>
            <div class="">
                <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format:
                'jpeg', fallback: "http://placehold.jp/100x100.jpg?text=Profile" %>
            </div>

            <div class="">
                name:<%= current_user.name %>
            </div>

            <div class="">
                <%= link_to 'マイページ編集', edit_user_path(current_user.id), class: "btn btn-success"
                %>
            </div>
            <h1>New book</h1>
            <%= form_with model: @books, url: books_path, local:true do |f| %>
                <p>Title</p>
                <%= f.text_field :title , class: "edit-title"%>
                <p>Body</p>
                <%= f.text_area :body, class: "edit-body"%>
                <br>
                <%= f.submit 'Create Book', class: "btn btn-success" %>
            <% end %>
        </div>
    </div>
</div>
