<h2>プロフィール編集</h2>

<span><%= link_to "Bookers", books_path %></span>

<%= form_with model:@user, local:true do |f| %>
<div>
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
</div>

<div>
    <%# プロフィール画像の編集 %>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',
        fallback: "http://placehold.jp/100x100.jpg?text=Profile" %>
        <div>
            <label for="inputImage">ProfileImage</label>
        </div>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>
    <br/>
    <div>
        <%= f.submit "変更を保存" %>
    </div>
<% end %>