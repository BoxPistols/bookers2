<div class="row">
  <!-- user info -->
  <div class="col-md-3">
    <%= render 'users/user-info', books: @books %>
  </div>
  <!-- users list -->
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <%# 総合一覧画面、複数のユーザーが混在する %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th>詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user.id) do%>
            <%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "rad",format: 'jpeg', fallback: "http://placehold.jp/60x60.jpg?text=Profile" %>
            <br />
            <% end %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to user_path(user.id) do%>
            詳細を見る
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
