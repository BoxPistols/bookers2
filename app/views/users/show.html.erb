<div>
<span><%= link_to "Bookers", books_path %></span>

<h3><%= @user.name %></h3>
<%# <%= image_tag('sample-author1.jpg') %>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "http://placehold.jp/100x100.jpg?text=Profile" %>

<%# ログインユーザー自身であれば（かつログインしていれば）、自身のプロフィール編集が可能 %>
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>
</div>

<%# ユーザー自信の投稿一覧を閲覧する %>
<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>    
    <%= attachment_image_tag book, :image, :fill, 100, 100, format: 'jpeg' %>
  <% end %>
  <%# <p>投稿ユーザー画像：<%= image_tag('sample-author1.jpg')</p> %>
  <p>投稿ユーザー画像：TODO:xxx</p>
  <p>タイトル：<%= book.title %></p>
  <p>説明：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>